{
  "name": "Helm",
  "type": "executer",
  "imgUrl": "icon.png",
  "execProgram": "node",
  "main": "app.js",
  "version": "1.1.0",
  "description": "Helm CLI wrapper",
  "category": "CONTAINERS",
  "auth": {
    "authId": "",
    "params": [{
      "name": "kubeCertificateFile",
      "viewName": "Certificate file directory",
      "type": "string"
    }, {
      "name": "kubeToken",
      "viewName": "Kubernetes token",
      "type": "vault"
    }, {
      "name": "kubeApiServer",
      "viewName": "API server address",
      "type": "string"
    }, {
      "name": "kubeUser",
      "viewName": "Username",
      "type": "string"
    }, {
      "name": "namespace",
      "viewName": "Namespace",
      "type": "string"
    }]
  },
  "methods": [
    {
      "name": "helmInstall",
      "viewName": "Install",
      "params": [
        {
          "name": "dirPath",
          "viewName": "Directory Path",
          "type": "string"
        },
        {
          "name": "chart",
          "viewName": "Release Name",
          "type": "string"
        },
        { 
          "name": "generateName",
          "viewName": "Generate Name",
          "type": "boolean"
        },
        {
          "name": "namesapce",
          "viewName": "Namespace",
          "type": "string"
        },
        { 
          "name": "endpointUrl",
          "viewName": "Endpoint URL",
          "type": "string"
        },
        {
          "name": "caCert",
          "viewName": "Certificate Authority",
          "type": "vault"
        },
        {
          "name": "token",
          "viewName": "Service Account Token",
          "type": "vault"
        },
        {
          "name": "saName",
          "viewName": "Service Account Name",
          "type": "string"
        },
        {
          "name": "helmVars",
          "viewName": "Helm Variables",
          "type": "text"
        }
      ]
    }
  ]
}