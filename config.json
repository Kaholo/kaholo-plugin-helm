{
  "name": "Helm",
  "type": "executer",
  "imgUrl": "icon.png",
  "execProgram": "node",
  "main": "app.js",
  "version": "1.1.0",
  "description": "Helm CLI wrapper",
  "category": "CONTAINERS",
  "auth": {
    "authId": "helm",
    "params": [{
      "name": "kubeCertificate",
      "viewName": "Kubernetes Certificate file content",
      "type": "string",
      "required": true
    }, {
      "name": "kubeToken",
      "viewName": "Kubernetes token",
      "type": "vault",
      "required": true
    }, {
      "name": "kubeApiServer",
      "viewName": "API server address",
      "type": "string",
      "required": true
    }, {
      "name": "kubeUser",
      "viewName": "Username",
      "type": "string",
      "required": true
    }, {
      "name": "namespace",
      "viewName": "Namespace",
      "type": "string"
    }]
  },
  "methods": [
    {
      "name": "install",
      "viewName": "Install",
      "params": [
        {
          "name": "chartDirectory",
          "viewName": "Chart directory",
          "type": "string",
          "required": true
        },
        {
          "name": "releaseName",
          "viewName": "Release name",
          "type": "string"
        },
        {
          "name": "generateName",
          "viewName": "Generate Name",
          "type": "boolean",
          "description": "Generate the Chart name if it is not supplied"
        },
        {
          "name": "valuesOverrides",
          "viewName": "Values overrides",
          "type": "text",
          "parserType": "array",
          "description": "Values overriding the values.yaml content",
          "placeholder": "service.port=8080"
        }
      ]
    }, {
      "name": "uninstall",
      "viewName": "Uninstall",
      "params": [
        {
          "name": "chartName",
          "viewName": "Chart name",
          "type": "string"
        }
      ]
    }, {
      "name": "runCommand",
      "viewName": "Run Command",
      "params": [
        {
          "name": "cliCommand",
          "viewName": "CLI Command",
          "type": "string",
          "placeholder": "list"
        }
      ]
    }
  ]
}